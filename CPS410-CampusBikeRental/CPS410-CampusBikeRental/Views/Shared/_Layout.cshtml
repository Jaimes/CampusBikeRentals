<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>Campus Bike Rentals</title>

	<link rel="stylesheet" href="//cdn.cmich.edu/bootstrap/3.1.1/css/bootstrap.min.css" />
	@*<link rel="stylesheet" type="text/css" href="//cdn.cmich.edu/css/fonts/fonts.css" />
	<link rel="stylesheet" type="text/css" href="//cdn.cmich.edu/fonts/cmichIcons/cmich_icons.css" />*@
	<link rel="stylesheet" href="@Url.Content("~/Content/css/applicationTemplate.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/css/BikeRental.css")" />
	<style>
		.field-validation-error {
			color: red;
			font-weight: normal;
		}
		.appNameLink:hover {
			text-decoration: none;
		}
	</style>
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.2/jquery-ui.js"></script>

	@RenderSection( "Head", false )
	<!--
		SHOUT OUTS! =)
		* Twitter Bootsrap - http://twitter.github.com/bootstrap
		* Font Awesome by Dave Gandy - http://fortawesome.github.com/Font-Awesome
	-->
	<!-- This is the standard layout -->
</head>

<body>
	<!-- top header-->
	<header class="header">
		<div class="container-fluid cmichAppBanner">
			<div class="cmichAppBanner_topBar">
				<a href="#" class="cmichAppBanner_headerWordmark appNameLink" style="margin-top:18px; width: 290px;">
					<h2 style="color: #fff;">Campus Bike Rental</h2>
				</a>
			</div>
			<a href="@Url.Action("Login", "Home")" class="btn btn-default btn-maroon btn-signout" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" style="top: 18px;">
				@*<span class="glyphicon icon-cmich-switch"></span>
				<br />*@
				<span class="inline-block-middle">SIGN-OUT</span>
			</a>
		</div>
	</header>

    <!-- Application Navbar -->
    <div class="navbar-default cmichAppNav">
        <nav class="navbar cmichAppNav_container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle navbar-toggle-application btn btn-top btn-gold" data-toggle="collapse" data-target=".navbar-collapse-application">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Bike Rental</a>
            </div>
         
                <div class="navbar-collapse collapse navbar-collapse-application">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                </div>
            
        </nav>
    </div>

	<!-- Content -->
	<div class="container pageContent">
		<div class="row">
			<div class="col-md-12">
				<div class="pageContent_applicationBodyHolderOuter">
					<ul class="nav nav-tabs applicationBodyTabs">
						<!-- Placeholder for spacing. No tabs for this application -->
					</ul>
					<div class="pageContent_applicationBodyHolderInner" style="padding: 10px 20px 20px">
						<div class="row">
							<div class="col-md-12">
								<!--Content will go here-->
								@RenderBody()
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


	<!-- JavaScripts -->
	<script src="https://cdn.cmich.edu/jquery/jquery.min.js" type="text/javascript"></script>
	<script src="https://cdn.cmich.edu/bootstrap/3.1.1/js/bootstrap.min.js" type="text/javascript"></script>
	@RenderSection( "Scripts", false )
</body>
</html>
