@model CPS410_CampusBikeRental.Code.Bike

@{
    ViewBag.Title = "AddBike";
}

<h2>Add Bike</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>

        <div class="editor-label">
            @Html.LabelFor(model => model.bikeNumber, "Bike Number")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor( model => model.bikeNumber, new { @class = "form-control" } )
            @Html.ValidationMessageFor(model => model.bikeNumber)
        </div>

        @*<div class="editor-label">
            @Html.LabelFor(model => model.isAvailable, "Available to Rent")
