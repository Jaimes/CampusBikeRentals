        <div class="editor-field">
            @Html.EditorFor( model => model.isAvailable, new { @class = "form-control" } )
            @Html.ValidationMessageFor(model => model.isAvailable)
        </div>*@

        <div class="editor-label">
            @Html.LabelFor(model => model.condition, "Condition")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor( model => model.condition, new { @class = "form-control" } )
            @Html.ValidationMessageFor(model => model.condition)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.location, "Location")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor( model => model.location, new { @class = "form-control" } )
            @Html.ValidationMessageFor(model => model.location)
        </div>

		<br />
        <p>
            <input type="submit" value="Submit" class="btn btn-success"/>
			@Html.ActionLink( "Cancel", "Index", null, new { @class = "btn btn-danger" } )
        </p>
    </fieldset>
}

