@model CPS410_CampusBikeRental.Code.Checkout

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

	<fieldset>
		<div class="form-group">
			<div class="editor-label">
				@Html.LabelFor( model => model.scheduledOutDate, "Pickup Date & Time:" )
			</div>
			<div class="row">
				<div class="col-md-6 col-lg-4">
					@Html.TextBoxFor( model => model.scheduledOutDate, new { @class = "form-control date" } )
					@Html.ValidationMessageFor( model => model.scheduledOutDate )
				</div>
			</div>
		</div>

		@*<div class="form-group">
