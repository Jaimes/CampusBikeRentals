		<div class="form-group">
			<div class="editor-label">
				@Html.LabelFor( model => model.location, "Location:" )
			</div>
			<div class="row">
				<div class="col-md-6 col-lg-4">
					@Html.DropDownListFor( model => model.location, new List<SelectListItem>
                     {
                        new SelectListItem{ Text="North Campus", Value = "North Campus" },
						new SelectListItem{ Text="East Campus", Value="East Campus"},
						new SelectListItem{ Text="South Campus", Value="South Campus"},
						new SelectListItem{ Text="West Campus", Value="West Campus"}
					 }
