					@Html.TextBoxFor( model => model.scheduledOutTime, new { @class = "form-control" } )
					@Html.ValidationMessageFor( model => model.scheduledOutTime )
				</div>
			</div>
		</div>*@

		<div class="form-group">
			<div class="editor-label">
				@Html.LabelFor( model => model.scheduledInDate, "Return Date & Time:" )
			</div>
			<div class="row">
				<div class="col-md-6 col-lg-4">
					@Html.TextBoxFor( model => model.scheduledInDate, new { @class = "form-control date" } )
					@Html.ValidationMessageFor( model => model.scheduledInDate )
				</div>
			</div>
		</div>

		@*<div class="form-group">
			<div class="editor-label">
				@Html.LabelFor( model => model.scheduledInTime, "Return time:" )
			</div>
			<div class="row">
				<div class="col-md-6 col-lg-4">
					@Html.TextBoxFor( model => model.scheduledInTime, new { @class = "form-control" } )
					@Html.ValidationMessageFor( model => model.scheduledInTime )
				</div>
			</div>
